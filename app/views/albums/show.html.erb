<div class="page-header">
  <h1><%= @album.name %><small></small></h1>
</div>

<%= link_to "Add Song", new_song_path, class: 'btn btn-primary btn-sm' %>

<br>

<% if @album.songs.length > 0 %>
    <table class="table table-hover table-striped">
      <thead>
      <tr>
        <th>Song Title</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @album.songs.each do |a| %>

          <tr>
            <td>
              <%= a.title %>
            </td>

            <td>

              <%= link_to "View", song_path(a), :class => 'btn btn-xs btn-primary' %>
              <%= link_to "Edit", edit_song_path(a), :class => 'btn btn-xs btn-warning' %>
              <%= link_to "Delete", song_path(a), method: :delete, :class => 'btn btn-xs btn-danger' %>

            </td>

          </tr>
      <% end %>

      </tbody>
    </table>
<% end %>